#include<stdio.h>
int main()
{
    int i,t,N,K,s;
    scanf("%d",&t);
    for(i=1;i<=t;i++)
    {
        scanf("%d %d",&N,&K);
        if(N<K)
        {
            printf("%d\n",N);
        }
        else
        {
            s=(N/K)+(N%K);
            printf("%d\n",s);
        }
    }
    return 0;
}
